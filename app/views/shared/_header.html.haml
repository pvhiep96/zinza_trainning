/ Static navbar
%nav.navbar.navbar-default
  .container-fluid
    .navbar-header
      %button.navbar-toggle.collapsed{"aria-controls" => "navbar", "aria-expanded" => "false", "data-target" => "#navbar", "data-toggle" => "collapse", :type => "button"}
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      %a.navbar-brand{:href => "http://localhost:3000/"} Project name
    #navbar.navbar-collapse.collapse
      %ul.nav.navbar-nav
        %li= link_to "Home", root_path, class: "active"
        %li
          - if user_signed_in?
            %li= link_to current_user.email, edit_user_registration_path
          - else
            %li= link_to t("login"), new_user_session_path
        %li= link_to "Categories", categories_path
        %li= link_to "Product",  products_path
      %ul.nav.navbar-nav.navbar-right
        %li
          %div
            = link_to "List cart", orders_path,class: "btn btn-link"
        %li
          #cart.cart-text
            - if user_signed_in?
              = render 'shared/cart_text', order: @order
        %li= link_to "En", locale:"en"
        %li= link_to "Vi", locale:"vi"
        %li
          %div
            - if user_signed_in?
              = link_to t("logout"), destroy_user_session_path, method: 'delete',class: "btn btn-link"
    / /.nav-collapse
  / /.container-fluid
