.container
	.row
		%h1 Create Product
		= form_for @product do |f|
			= render "shared/error_message", object: f.object
			= f.label :category
			%br/
			= f.collection_select :category_id, Category.all, :id, :name, :prompt => 'Select One', class: "btn btn-default dropdown-toggle"
			%br/
			= f.label :name
			%br/
			= f.text_field :name, class: 'form-control'
			%br/
			= f.label :price
			%br/
			= f.text_field :price, class: 'form-control'
			%br/
			= f.label :description
			%br/
			= f.text_field :description, class: 'form-control'
			%br/
			= f.label :qauntity
			%br/
			= f.text_field :quantity, class: 'form-control'
			%br/
			= f.label :status
			%br/
			= f.check_box :status
			%br/
			= f.fields_for :pictures do |builder|
				= render 'picture_fields', f: builder
			= link_to_add_fields 'Add picture', f, :pictures
			%br/
			= f.submit 'Create product', class: 'btn btn-primary'