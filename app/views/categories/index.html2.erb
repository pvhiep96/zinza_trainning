<p id="notice"><%= notice %></p>
<div class="container">
<div class="row">
<%= form_tag(categories_path, method: :get) do %>
  <%= text_field_tag :name %>
  <%= submit_tag 'Search' %>
<% end %>
<h1>Categories</h1>
<% if can? :new, @products  %>
<%= link_to 'New Category', new_category_path , class: 'btn btn-primary' %>
<% end %>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td>
          <span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span>
          <span class="glyphicon-class"><%= link_to 'Show', category %></span>
        </td> 
        <td><% if can? :update, category %>
                <span class="glyphicon glyphicon-pencil" aria-hidden="true"> </span>
                <span class="glyphicon-class"><%= link_to "Edit", edit_category_path(category) %></span>
                
              <% end %>
        </td>
        <td> <% if can? :destroy, category %>
                <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                <span class="glyphicon-class"><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td></span>
                
             <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
</div>
<br>
