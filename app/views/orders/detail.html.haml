.container.text-center
  .row
    %table.table.table-striped
      %thead
        %tr
          %th{style: "text-align:center"} Name
          %th{style: "text-align:center"} Quantity
          %th{style: "text-align:center"} Price
          %th{style: "text-align:center"} Total detail
          %th{colspan: "3"}
      %tbody
        - @order.order_details.each do |order|
          %tr
            %td= order.name
            %td= order.quantity
            %td
              = order.price
            %td= number_to_currency order.quantity * order.price
    TOTAL: #{@order.total_price}
    %br/
